<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_attendance_temporary_form_view" model="ir.ui.view">
            <field name="name">hr_payroll_attendance.hr_attendance_temporary.form</field>
            <field name="model">hr.attendance.temporary</field>
            <field name="arch" type="xml">
                <form string="Hr Attendance Temporary">
                    <header>
                            <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                        </header>
                    <sheet>

                        <div class="oe_title">
                            <label for="employee_id"/>
                            <h1>
                                <field name="employee_id" placeholder="Title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
<!--                                <field name="actual_work"/>-->
                                <field name="error_message" invisible= "state != 'error'"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="hr_attendance_temporary_tree_view" model="ir.ui.view">
            <field name="name">hr_payroll_attendance.hr_attendance_temporary.tree</field>
            <field name="model">hr.attendance.temporary</field>
            <field name="arch" type="xml">
                <tree string="Hr Attendance Temporary" editable="bottom" js_class="hr_attendance_temporary_button_tree">
                    <header>
                        <button type="object" name="import_to_attendance" string="Import Attendance"/>
                        <button type="object" name="calculate_check_in_out" string="Convert to Datetime"/>
                    </header>
                    <field name="employee_id"/>
                    <field name="date_char"/>
                    <field name="check_in_char"/>
                    <field name="check_out_char"/>
                    <field name="check_in"/>
                    <field name="check_out"/>
<!--                    <field name="actual_work"/>-->
                    <field name="state" decoration-success="state == 'done'" decoration-info="state == 'draft'" decoration-danger="state == 'error'"/>
                </tree>
            </field>
        </record>

        <record id="hr_attendance_temporary_search_view" model="ir.ui.view">
            <field name="name">hr_payroll_attendance.hr_attendance_temporary.search</field>
            <field name="model">hr.attendance.temporary</field>
            <field name="arch" type="xml">
                <search string="Hr Attendance Temporary">
                    <field name="employee_id"/>
                <filter string="Check In" name="timestamp_datetime_filter" date="check_in" default_period="last_month"/>

                    <group expand="1" string="Group By">
                        <filter string="Employee" name="employee_id" domain="[]"
                                context="{'group_by':'employee_id'}"/>
                        <filter string="State" name="state" domain="[]"
                                context="{'group_by':'state'}"/>
                        <filter string="Check In" name="groupby_name" context="{'group_by': 'check_in'}"/>

                    </group>
                </search>
            </field>
        </record>

        <record id="hr_attendance_temporary_act_window" model="ir.actions.act_window">
            <field name="name">Hr Attendance Temporary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.attendance.temporary</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new Hr Attendance Temporary.
                </p>
            </field>
        </record>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">co.zkteco.view.form.inherit.hr.biometric.device</field>
            <field name="model">hr.biometric.device</field>
            <field name="inherit_id" ref="co_zk_attendance_erp_new.hr_biometric_device_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='serial']" position="after">
                    <field name="ip"/>
                    <field name="port"/>
                </xpath>
            </field>
        </record>

        <menuitem name="Attendance Temporary" id="hr_attendance_temporary_menu" parent="hr_attendance.menu_hr_attendance_view_attendances" action="hr_attendance_temporary_act_window"/>

    </data>
</odoo>