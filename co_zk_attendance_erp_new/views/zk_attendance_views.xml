<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="zk_attendance_tree_view" model="ir.ui.view">
            <field name="name">zk.attendance.tree</field>
            <field name="model">zk.attendance</field>
            <field name="arch" type="xml">
                <tree string="ZK Attendance Logging" create="false" edit="false" delete="false">
<!--                    <header>-->
<!--                        <button name="time_now" type="object" string="Time now"/>-->
<!--                    </header>-->
                    <field name="biometric_device_id"/>
                    <field name="device_id" optional="hide"/>
                    <field name="employee_id"/>
                    <field name="table"/>
                    <field name="punching_time"/>
<!--                    <field name="punch_type"/>-->
                    <field name="attendance_type"/>
                </tree>
            </field>
        </record>

        <record id="zk_attendance_search_view" model="ir.ui.view">
            <field name="name">zk.attendance.search</field>
            <field name="model">zk.attendance</field>
            <field name="arch" type="xml">
                <search string="ZK Attendance Logging">
                    <field name="biometric_device_id"/>
                    <field name="employee_id"/>
                    <group expand="1" string="Group By">
                        <filter string="Biometric" name="group_device" context="{'group_by':'biometric_device_id'}"/>
                        <filter string="Employee" name="group_serial" context="{'group_by':'device_id'}"/>
                        <filter string="Type" name="group_attendance_type" context="{'group_by':'attendance_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="zk_attendance_act_window" model="ir.actions.act_window">
            <field name="name">ZK Attendance Logging</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">zk.attendance</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no logging.
                </p>
            </field>
        </record>
        <!-- <menuitem name="Biometric Logging"
                  id="zk_attendance_menu"
                  parent="hr_attendance.menu_hr_attendance_root"
                  action="zk_attendance_act_window"
        /> -->
    </data>
</odoo>