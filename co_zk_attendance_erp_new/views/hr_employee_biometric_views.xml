<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_employee_biometric_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.biometric.tree</field>
            <field name="model">hr.employee.biometric</field>
            <field name="arch" type="xml">
                <tree string="Biometric Device" editable="bottom">
                    <field name="biometric_device_id"/>
                    <field name="device_id"/>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

        <record id="hr_employee_biometric_search_view" model="ir.ui.view">
            <field name="name">hr.employee.biometric.search</field>
            <field name="model">hr.employee.biometric</field>
            <field name="arch" type="xml">
                <search string="Biometric Device">
                    <group expand="1" string="Filters By">
                        <field name="biometric_device_id"/>
                        <field name="device_id"/>
                        <field name="employee_id"/>
                    </group>
                    <group expand="1" string="Group By">
                        <field name="employee_id"/>
                        <filter name="group_employee_id" string="Employee" context="{'group': 'biometric_device_id'}"/>
                        <filter name="group_biometric_device_id" string="Biometric Device" context="{'group': 'biometric_device_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_employee_biometric_act_window" model="ir.actions.act_window">
            <field name="name">Employees Biometrics Assignment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.employee.biometric</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no device click here to add new Biometric Device.
                </p>
            </field>
        </record>

        <!-- <menuitem name="Employee Assignment" id="hr_employee_biometric_menu" parent="hr_attendance.menu_hr_attendance_root" action="hr_employee_biometric_act_window"/> -->

    </data>
</odoo>