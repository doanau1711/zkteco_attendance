<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_biometric_device_tree_view" model="ir.ui.view">
            <field name="name">hr.biometric.device.tree</field>
            <field name="model">hr.biometric.device</field>
            <field name="arch" type="xml">
                <tree string="Biometric Device" editable="bottom">
                    <field name="name"/>
                    <field name="serial"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="hr_biometric_device_search_view" model="ir.ui.view">
            <field name="name">hr.biometric.device.search</field>
            <field name="model">hr.biometric.device</field>
            <field name="arch" type="xml">
                <search string="Biometric Device">
                    <group expand="1" string="Filters By">
                        <field name="name"/>
                        <field name="serial"/>
                        <filter name="filter_inactive" string="Archived" domain="[('active','=', False)]"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="hr_biometric_device_act_window" model="ir.actions.act_window">
            <field name="name">Biometric Devices</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.biometric.device</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no device click here to add new Biometric Device.
                </p>
            </field>
        </record>

        <!-- <menuitem name="Biometric Devices" id="hr_biometric_device_menu" parent="hr_attendance.menu_hr_attendance_root" action="hr_biometric_device_act_window"/> -->

    </data>
</odoo>